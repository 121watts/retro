<h1>welcome to offroadmix</h1>

<p>
enter your email address and password to get started. we'll take it from there
</p>
<%= form_for @user, url: {action: "create"} do |f| %>
  <%=f.label 'Email' %>
  <%=f.text_field :email %>
  <%=f.label 'Password' %>
  <%=f.password_field :password %>
  <%=f.submit 'Start retrospecting' %>
<% end %>
