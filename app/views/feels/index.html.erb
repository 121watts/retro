<h1>Welcome to tinyRetro</h1>

<%if !current_user.has_email_and_phone? %>
  <%= form_for(@user) do |f| %>
    <p> Email:</br> <%= f.text_field :email, placeholder: "where shall we send your retro reminders?" %> </p>
    <p> Phone:</br> <%= f.text_field :phone, placeholder: "Lemme get your digits" %> </p>
    <%= f.submit :Feel, class: 'button' %>
  <% end %>
<% else %>

  <div class='feel_input'>
    <%= form_for @feel do |f| %>
      <!-- <%= f.label :body %>: -->
      <%= f.text_area :body, placeholder: 'reflect on your day...' %><br />
      <%= f.hidden_field :emoji, :value => 'cool' %>

      <!-- <div class="large-6 columns">
        <label>Select your mood:</label>
        <input type="radio" name="emoji" value="Sad" id="sad_face"><label for="pokemonRed">Sad</label>
        <input type="radio" name="pokemon" value="Blue" id="pokemonBlue"><label for="pokemonBlue">Blue</label>
      </div> -->

      <%= f.submit %>
    <% end %>
  </div>
<%end%>

<hr>

<% if current_user.feels.any? %>
  <% current_user.feels.each do |feel| %>
    <h1><%= feel.created_at %></h1>
    <p><%= feel.body %></p>
  <% end %>
<% end %>
